<UserControl
                xmlns="http://schemas.microsoft.com/client/2007"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
                x:Class="SlUserControl.Main"
                x:Name="Main"
                >
    <StackPanel Margin="5" Height="Auto" Width="Auto">
        <StackPanel HorizontalAlignment="Left">
            <Button Margin="5" x:Name="_test1" Content="Test1" Style="{StaticResource myStyle}"/>
        </StackPanel>
        <ScrollViewer x:Name="_scrollViewer" Height="100" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="_messages">
                <TextBlock Text="Loading ..." TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
        <data:DataGrid x:Name="_grid">
        </data:DataGrid>
    </StackPanel>
</UserControl>
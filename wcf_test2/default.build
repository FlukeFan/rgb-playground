<?xml version="1.0"?>
<project name="wcf_test" default="build">

    <echo message="Using '${nant.settings.currentframework}' framework on '${platform::get-name()}' platform." />

    <target name="build">

        <mkdir dir="bin" />

        <csc    target="exe"
                debug="true"
                output="bin/Service.exe"
                warnaserror="true">

            <sources>
                <include name="Service.cs" />
            </sources>

        </csc>

        <copy todir="bin" file="Service.exe.config" />

        <csc    target="exe"
                debug="true"
                output="bin/Client.exe"
                warnaserror="true">

            <references>
                <include name="bin/Service.exe" />
            </references>

            <sources>
                <include name="Client.cs" />
            </sources>

        </csc>

        <copy todir="bin" file="Client.exe.config" />

    </target>


</project>

<?xml version="1.0"?>
<configuration xmlns="http://schemas.microsoft.com/.NetConfiguration/v2.0">

    <system.serviceModel>

        <services>
            <service name="WcfTest.MyService" behaviorConfiguration="MyServiceBehavior">
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8080/Services"/>
                    </baseAddresses>
                </host>
                <endpoint address="" binding="basicHttpBinding" contract="WcfTest.IWcfTest"/>
            </service>
        </services>

        <behaviors>
            <serviceBehaviors>
                <behavior name="MyServiceBehavior">
                    <serviceDebug includeExceptionDetailInFaults="true"/>
                    <serviceMetadata httpGetEnabled="true" />
                </behavior>
            </serviceBehaviors>
        </behaviors>

    </system.serviceModel>

</configuration>


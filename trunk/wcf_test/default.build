<?xml version="1.0"?>
<project name="Atlanta" default="build">

    <echo message="Using '${nant.settings.currentframework}' framework on '${platform::get-name()}' platform." />

    <target name="build">
    
        <mkdir dir="bin" />

        <mkiisdir   dirpath="."
                    vdirname="WcfTest"
                    enabledirbrowsing="true"
                    />

        <csc    target="library"
                output="bin/Service.dll"
                warnaserror="true">

            <references>
                <include name="..\SDKs\Wcf/System.ServiceModel.dll" />
            </references>

            <sources>
                <include name="*.cs" />
            </sources>

        </csc>

    </target>

    <target name="clean">

        <deliisdir vdirname="WcfTest" failonerror="false" />
        <delete dir="bin"/>

    </target>

</project>
